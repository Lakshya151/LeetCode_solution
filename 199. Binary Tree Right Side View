//Solution in C++

class Solution {
public:
    void view(TreeNode *root, int level,vector<int>&ans){
        if(root==NULL)return ;
        if(level==ans.size()) ans.push_back(root->val);
        view(root->right,level+1,ans);
        view(root->left,level+1,ans);
    }
    vector<int> rightSideView(TreeNode* root) {
        vector<int>ans;
        int level=0;
        view(root,level,ans);
        return ans;
    }
};
