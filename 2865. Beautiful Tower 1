class Solution {
public:
    long long maximumSumOfHeights(vector<int>&arr) {
        int n=arr.size();
        long long ans=0;
        for(int peak=0;peak<n;peak++){
            long long sum=arr[peak];

            //left side
            int curr=arr[peak];
            for(int i=peak-1;i>=0;i--){
                curr=min(curr,arr[i]);
                sum+=curr;
            }
            //right
            int right=arr[peak];
            for(int i=peak+1;i<n;i++){
                right=min(arr[i],right);
                sum+=right;
            }
            ans=max(ans,sum);

        }
        return ans;
    }
};
