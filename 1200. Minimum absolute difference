class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        sort(arr.begin(),arr.end());
        vector<vector<int>>ans;
        int dif=INT_MAX;
        int d;
        for(int i=1;i<arr.size();i++){
            d=arr[i]-arr[i-1];
            if(d<dif){
                ans.clear(); //clearing the ans , if new pair found that that difference less the previous pair
                ans.push_back({arr[i-1],arr[i]});
                dif=d;
            }else if(d==dif){
                ans.push_back({arr[i-1],arr[i]});
            }
        }
        return ans;
    }
};
